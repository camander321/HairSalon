@{
  Layout = "_Layout";
}

<div class='col-md-6'>

  @if (HairSalon.Models.Stylist.GetAll().Count > 0)
  {
    <a href="/clients/new">Add a new client</a>
  }

</div>
<div class='col-md-6'>
  <a href="/">Return to Home</a>
</div>

<form action="clients/search" method="post">
  <div class='col-md-4'></div>
  <div class='col-md-4'>
    <div class='col-md-8'>
      <input class='form-control' name='search' placeholder='Search Clients'>
    </div>
    <div class='col-md-4'>
      <button class='form-control btn btn-success'>Search</button>
    </div>
  </div>
  <div class='col-md-4'></div>
</form>

<table class='table table-bordered'>
  <thead>
    <th>Name</th>
    <th>Stylist</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <tbody>
    @foreach (var client in Model)
    {
      var stylist = HairSalon.Models.Stylist.Find(client.GetStylist());
      
      <tr>
        <td>@client.GetFirst() @client.GetLast()</td>
        <td><a href='/stylists/@stylist.GetId()'>@stylist.GetFirst() @stylist.GetLast()</a></td>
        <td><a href='/clients/@client.GetId()/edit'>Edit</a></td>
        <td><a href='/clients/@client.GetId()/delete'>Delete</a></td>
      </tr>
    }
  </tbody>
</table>
<a href='/clients/clear'>Delete All</a>
